<div id="wrapper">
    <div class="Alist">
        <a href="/filemanager" class="block" id="file">
        File manager</a>
         <a href="/login" class="block" id="zar">
        Zaloguj</a>
    </div>
    
    <div id="inpCont">
        <h2>Zarejestruj</h2>
        <form action="/handleRegister" method="get">
            <p>Login <input type="text" name="login" id="login"></p>
            <p>Hasło <input type="text" name="pass" id="pass"></p>
            <p>Powtórz hasło <input type="text" id="pass2"></p>
            <button id="submitt">Submit</button>
        </form>

    </div>
</div>

<script>

    const cookie=document.getElementById('loginVar').innerText
    console.log(cookie)
    if(cookie==''){
        document.getElementById('file').style.pointerEvents='none'
        document.getElementById('zar').style.pointerEvents='none'
    }

    const submitBtn = document.getElementById('submitt')
    let login = '', pass = '', pass2 = '';
    login = document.getElementById('login')
    pass = document.getElementById('pass')
    pass2 = document.getElementById('pass2')
    passValue = pass.value
    pass2Value = pass2.value



    document.querySelector('.nav').style.display = 'none'
    pass.addEventListener('change', (e) => {
        passValue = e.target.value
        if (passValue !== pass2Value)
            submitBtn.disabled = true
        else
            submitBtn.disabled = false

    })
    pass2.addEventListener('change', (e) => {
        pass2Value = e.target.value
        if (pass2Value !== passValue)
            submitBtn.disabled = true
        else
            submitBtn.disabled = false
    })

</script>